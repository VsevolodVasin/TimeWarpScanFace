<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTextStyle">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/text_90_percents</item>
    </style>

    <style name="Large_title" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Title" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BodySemibold" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BodyRegular" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Caption1" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Caption2" parent="MainTextStyle">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:max">100</item>
    </style>
    
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="LevelButton">
        <item name="fontFamily">@font/creepster</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/level_button</item>
        <item name="android:textColor">@color/text_90_percents</item>
    </style>

    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>